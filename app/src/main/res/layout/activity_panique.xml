<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Views.PaniqueActivity"
    android:id="@+id/activity_panique">
    <ProgressBar
        android:id="@+id/progressbar"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        android:progress="0"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        />

    <TextView
        android:id="@+id/msg_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_stop"
        android:textAlignment="center"
        android:textColor="#56002c"/>
    <Button
        android:id="@+id/Appeler_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appeler le 100" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/beerwarning"/>
</LinearLayout>
